<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/purble"
    tools:context=".hotFace">

    <ImageView
        android:id="@+id/img_back_hotFace"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        app:srcCompat="@drawable/back_svgrepo_com" />

    <ImageView
        android:id="@+id/img_hot2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/purble"
        app:srcCompat="@drawable/hot_face" />

    <TextView
        android:id="@+id/title_hot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/artical_title_hot"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text_hot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/text_about_hot"
                android:textColor="#FAA527"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>